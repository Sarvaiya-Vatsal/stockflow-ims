{
  "info": {
    "name": "StockMaster API",
    "description": "Complete API collection for StockMaster Inventory Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Inventory Manager\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?search=&page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
                  "value": ""
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"PROD-001\",\n  \"name\": \"Widget A\",\n  \"categoryId\": \"\",\n  \"unitOfMeasure\": \"pcs\",\n  \"reorderPoint\": 50,\n  \"initialStock\": {\n    \"warehouseId\": \"\",\n    \"quantity\": 100\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        }
      ]
    },
    {
      "name": "Receipts",
      "item": [
        {
          "name": "Create Receipt",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supplierName\": \"Supplier ABC\",\n  \"warehouseId\": \"\",\n  \"items\": [\n    {\n      \"productId\": \"\",\n      \"quantity\": 50,\n      \"unitPrice\": 10.50\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/receipts",
              "host": ["{{baseUrl}}"],
              "path": ["receipts"]
            }
          }
        },
        {
          "name": "Validate Receipt",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/receipts/:id/validate",
              "host": ["{{baseUrl}}"],
              "path": ["receipts", ":id", "validate"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Delivery Orders",
      "item": [
        {
          "name": "Create Delivery Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerName\": \"Customer XYZ\",\n  \"warehouseId\": \"\",\n  \"items\": [\n    {\n      \"productId\": \"\",\n      \"quantity\": 10\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/delivery-orders",
              "host": ["{{baseUrl}}"],
              "path": ["delivery-orders"]
            }
          }
        },
        {
          "name": "Validate Delivery Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/delivery-orders/:id/validate",
              "host": ["{{baseUrl}}"],
              "path": ["delivery-orders", ":id", "validate"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get KPIs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/kpis",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "kpis"]
            }
          }
        },
        {
          "name": "Get Recent Activity",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/dashboard/recent-activity?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "recent-activity"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

